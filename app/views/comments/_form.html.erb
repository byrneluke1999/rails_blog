<div class="section">
  <!--
  Returns one or more new objects of the collection type that have been instantiated with attributes and linked to this object through a foreign key, but have not yet been saved. Note: This only works if an associated object already exists, not if itâ€˜s nil!
    -->
  <%= simple_form_for ([@post, @post.comments.build]) do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :name, input_html: {class: 'input'}, wrapper: false, label_html: {class: 'label'} %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :comment, input_html: {class: 'textarea'}, wrapper: false, label_html: {class: 'label'} %>
      </div>
    </div>
    <!-- Rails is clever in that when labelling button it knows when to say update and when to say create.-->
    <%= f.button :submit, class: "button is-primary"%>
  <% end -%>
</div>
